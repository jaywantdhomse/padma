<div>
  <h1>Apply Online</h1>
  <%= simple_form_for @applicant, multiple: true, :html => {:class => 'form-horizontal', :id => 'applicantForm' } do |f| %>
    <div class="text-padd"><%= f.input :first_name, :placeholder => "Enter Your First Name", :input_html => { :class => "form-control", "data-lable" => "First Name" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :last_name, :placeholder => "Enter Your Last Name", :input_html => { :class => "form-control", "data-lable" => "Last Name" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :apply_for, :placeholder => "Applying For Position", :input_html => { :class => "form-control", "data-lable" => "Apply For" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :email, :placeholder => "Your Email", :input_html => { :class => "form-control", "data-lable" => "Email" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :phone, :placeholder => "Your Phone", :input_html => { :class => "form-control", "data-lable" => "Phone" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :current_organization, :placeholder => "Current Organization", :input_html => { :class => "form-control", "data-lable" => "Current Organization" }, label: false %></div>
    
    <div class="text-padd"><%= f.input :current_profile, :placeholder => "Current Profile", :input_html => { :class => "form-control", "data-lable" => "Current Profile" }, label: false %></div>
    
    <div class="text-padd"><%= f.file_field :avatar, :placeholder => "Upload CV", :input_html => { :class => "form-control", "data-lable" => "Upload CV" }, label: false %></div>
    
    <div class="form-actions">
    <div id="success" style="color:green"></div>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>

<style>
	.text-padd{
		padding: 3px;
	}
</style>

