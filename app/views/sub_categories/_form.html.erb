<%= simple_form_for(@sub_category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="text-padd"><%= f.select :category_id, Category.all.collect{ |c| [c.name, c.id] }, {}, :class => "form-control" %></div>
    <div class="text-padd"><%= f.input :name, :placeholder => "Name", :input_html => { :class => "form-control"} %></div>
    <div class="text-padd"><%= f.input :description, :placeholder => "Description", :input_html => { :class => "form-control"} %></div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
