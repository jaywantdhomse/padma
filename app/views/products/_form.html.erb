<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.collection_select :category_id, Category.all, :id, :name, :prompt => 'Select One' %>
    <%= f.input :model %>
    <%= f.input :price %>
    <%= f.input :image, :as => :string %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
