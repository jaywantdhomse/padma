<div style="padding-bottom: 15px;">
	<div id="contact" style="width:100%; height:500px;">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading" style="color: white; padding-top: 17px; font-weight: bolder;">Contact Us</h2>
                </div>
            </div>
            <div class="row" style="padding-top: 60px;">
                <div class="col-lg-12">
                    <form action="contact_us" name="sentMessage" id="contactForm" novalidate >
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" data-lable="Name" name="contact_us[name]" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                                    <p class="help-block text-danger"></p>
                                </div>    
                                <div class="form-group">
                                    <input type="text" data-lable="City" name="contact_us[city]" class="form-control" placeholder="City *" id="city" required data-validation-required-message="Please enter your city.">
                                    <p class="help-block text-danger"></p>
                                </div>                       
                                <div class="form-group">
                                    <input type="text" data-lable="Address" name="contact_us[address]" class="form-control" placeholder="Address *" id="address" required data-validation-required-message="Please enter your address.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="text" data-lable="Pincode" name="contact_us[pincode]" class="form-control" placeholder="Pin-code *" id="pin_code" required data-validation-required-message="Please enter your pincode.">
                                    <p class="help-block text-danger"></p>
                                </div>                                
                            </div>
                            <div class="col-md-6">
                            	<div class="form-group">
                                    <input type="tel" data-lable="Phone No" name="contact_us[phone]" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">
                                    <p class="help-block text-danger"></p>
                                </div>
                                <div class="form-group">
                                    <input type="text" data-lable="Email" name="contact_us[email]" class="form-control" placeholder="Email *" id="email" required data-validation-required-message="Please enter your email.">
                                    <p class="help-block text-danger"></p>
                                </div>                                
                                <div class="form-group">
                                    <textarea style="height: 89px;" class="form-control" data-lable="Message" name="contact_us[message]" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                    <p class="help-block text-danger"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-lg-12 text-center" style="padding-top: 30px;">
                                <div id="success" style="color:green"></div>
                                <button type="submit" class="btn btn-primary" style='padding:10px 20px'>Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            </div>
        </div>
        
<style>
	.form-group{
	padding: 6px 30px 0px 30px;
	}
</style>        
