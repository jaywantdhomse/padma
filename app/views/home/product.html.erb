<div class="container">
	<div class="row">
 		<div class="col-lg-12">
 			<div class="col-md-4" style="padding-left:0px;">
 				<div style="height: 50%; border: 2px solid black; background:black;">
					<div style="font-size: 21px; color: white; text-align: center; padding: 12px; border-bottom:2px solid blue;">
						Products</div>
					<% @categories.each do |category| %>
						<div style="width:100%; padding: 6px;color: black;font-size: 16px;text-align: center; border-bottom:2px solid blue;">
							<div style="background-color: lightgrey; padding: 5px;"><a href="/product?category_id=<%= category.id %>"><%= category.name %></a>
							</div>
						</div>
					<% end %>
 				</div>
 				<div style="height: 50%; border: 2px solid black;">
 					<%= video_tag(["video.mp4"], :size => "362x180", :controls => true) %>
 				</div>
 				
 			</div>
			<div class="col-md-8" >
				<% is_closed = false %>
				<% i = 0 %>
				<% @products.each do |product| %>
					<% if i % 3 == 0 %>
						<div class='row' style='padding-bottom: 10px;'>
					<% end %>
					<div class="col-md-4">
						<div style="border: 1px solid blue; height: 150px; background: lightskyblue; border-radius: 10px;"><%= product.name %></div>
					</div>
					<% if(i != 3 && i % 3 == 2) %>
						<% is_closed = true %>
						</div>
					<% end %>
					<% i = i + 1 %>
				<% end %>
				<% if !is_closed %>
					</div>
				<% end %>
 			</div> 			
 		</div>
 	</div>
</div>
