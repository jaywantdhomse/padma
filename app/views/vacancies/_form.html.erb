<%= simple_form_for(@vacancy) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  	<div class="text-padd"><%= f.input :post, :placeholder => "Add Post of Opening", :input_html => { :class => "form-control" }, label: false %></div>
	<div class="text-padd"><%= f.input :experience, :placeholder => "Experience Required", :input_html => { :class => "form-control" }, label: false %></div>
	<div class="text-padd"><%= f.input :skills, :placeholder => "Skills Required", :input_html => { :class => "form-control" }, label: false %></div>
  </div>

  <div class="form-actions">
    <%= f.submit 'Add Vacancy', :class => 'submit_vacancy btn btn-primary' %>
  </div>
<% end %>
